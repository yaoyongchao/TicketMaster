    <style name="loginWhiteBlock" parent="AppTheme">
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="loginTv1" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="txtSmallGray" parent="AppTheme">
        <item name="android:textColor">@color/txtGrey</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="txtSmallBlue" parent="AppTheme">
        <item name="android:textColor">@color/txtBlue</item>
        <item name="android:textSize">@dimen/txt_small</item>
