<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    android:layout_marginTop="-1px"
    android:id="@+id/llyt_socket_status"
    android:background="#CDE5FC"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="40dip">
    <!--<ImageView
        android:id="@+id/update_left_icon1"
        android:src="@mipmap/update"
        android:layout_width="25dip"
        android:visibility="gone"
        android:layout_height="25dip" />-->
    <TextView
        android:layout_marginLeft="14dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="当前账号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#187EFC"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/llyt_switch"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_switch"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        />



    <TextView
        android:id="@+id/tv_socket_indicato_light"
        android:layout_width="@dimen/socket_indicato_light_size"
        android:layout_height="@dimen/socket_indicato_light_size"
        android:background="@drawable/bg_socket_status_off"
        />

    <TextView
        android:id="@+id/tv_socket_status"
        android:text="离线"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_marginRight="14dip"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_height="wrap_content" />
</LinearLayout>